.pageview {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: rgb(115, 198, 240);
}

.topview {
    width: 100%;
    height: 80px;
    display: flex;
    background: rgb(115, 198, 240);
    border-bottom: 1px solid white;
    justify-content: center;
    align-content: center;
    
    /* 固定位置 */
    position: fixed;
    top: 0px;
    left: 0px;
    /* 设置于图层顶部 */
    z-index:  999;
}
.tv{
    font-size: 25px;
    font-weight: bold;
    font-family: 宋体;
    letter-spacing: 5pt;
}
.lineview {
    width: 100%;
    height: 13%;
    border-bottom: 1px solid white;
    display: flex;
}

.avaterview {
    /* width: 15%; */
    flex: 1;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border-right: 1px solid white;
}
.avaters {
    height: 75%;
    width: 75%;
    display: flex;
}
.newview{
    /* width: 15%; */
    flex: 4;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.bg1 {
    background-color: rgb(251, 128, 128);
}

.bg2 {
    background-color: bisque;
}
.contentview{
    width: 100%;
    height: 85%;
    /* margin-top: 78px; */
    /* 相对位置 */
    position: relative;
    top: 80px;
}